


     <%= simple_form_for [@company, @assigned_tax_codes] do |f| %>
         <%= f.input :entity_id,
        label: "Entity Name",
        collection: @entities_name,
        required: true,
        autofocus: true %>
        <%= f.input :name, 
        label: "Tax Code Name",
        as: :string,
        required: true,
        autofocus: true %>
        <%= f.input :side,
        label: "Side of Transaction",
        collection: ["Purchase", "Sale"],
        required: true,
        autofocus: true %>
        <%= f.input :localization,
        label: "Localization Transaction",
        collection: ["Domestic", "Intra-Community", "Foreign"],
        required: true,
        autofocus: true%>
         <%= f.input :rate,
        label: "Rate of Transaction",
        collection: ["Standard", "Intermediate", "Reduced", "Zero"],
        required: true,
        autofocus: true %>
        <%= f.input :type_transaction,
        label: "Type of Transaction",
        collection: ["Goods", "Services"],
        required: true,
        autofocus: true %>
        


        <%= f.submit "Save", class: "btn btn-primary" %>
    <% end %>