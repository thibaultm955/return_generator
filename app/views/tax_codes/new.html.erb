


     <%= simple_form_for [@company, @entity] do |f| %>
         <%= f.input :name,
        label: "Side of Transaction",
        collection: @entity_names,
        required: true,
        autofocus: true %>
        <%= f.input :vat_number, 
        label: "Tax Code Name",
        as: :string,
        required: true,
        autofocus: true %>
        <%= f.input :adress,
        label: "Side of Transaction",
        collection: ["Purchase", "Sale"],
        required: true,
        autofocus: true %>
        <%= f.input :postal_code,
        label: "Localization Transaction",
        collection: ["Domestic", "Intra-Community", "Foreign"],
        required: true,
        autofocus: true%>
         <%= f.input :city,
        label: "Rate of Transaction",
        collection: ["Standard", "Intermediate", "Reduced", "Zero"],
        required: true,
        autofocus: true %>
        <%= f.input :jurisdiction,
        label: "Type of Transaction",
        collection: ["Goods", "Services"],
        required: true,
        autofocus: true %>
        


        <%= f.submit "Save", class: "btn btn-primary" %>
    <% end %>